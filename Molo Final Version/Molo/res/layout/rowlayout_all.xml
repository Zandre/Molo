<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_tutorialName"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/scoreboard_listview_background"
    android:orientation="vertical" >

    <RatingBar
        android:id="@+id/rb_scoreboard_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_scoreboard_user"
        android:background="@drawable/login_background"
        android:isIndicator="true"
        android:numStars="3"
        android:rating="3" />

    <TextView
        android:id="@+id/tv_scoreboard_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Zorro"
        android:textColor="@color/Black"
        android:textSize="40px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_scoreboard_tut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_scoreboard_user"
        android:layout_below="@+id/tv_scoreboard_user"
        android:text="Tutorial 1"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_scoreboard_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_scoreboard_tut"
        android:layout_below="@+id/tv_scoreboard_tut"
        android:text="2014-08-22"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_scoreboard_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_scoreboard_date"
        android:layout_below="@+id/tv_scoreboard_date"
        android:text="Time: 8"
        android:textColor="@color/Black" />

</RelativeLayout>
