<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iv_lesson"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.example.molo.Profile"
    tools:ignore="MergeRootFrame" >

    <EditText
        android:id="@+id/et_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_question1"
        android:layout_below="@+id/tv_question1"
        android:ems="10"
        android:text="Batman" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_your_answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_profile_username"
        android:layout_below="@+id/et_profile_username"
        android:text="Password"
        android:textColor="@color/Navy" />

    <EditText
        android:id="@+id/et_profile_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_your_answer1"
        android:layout_below="@+id/tv_your_answer1"
        android:ems="10"
        android:text="030791zb" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3" >

        <ListView
            android:id="@+id/lv_profile_tutorials"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/scoreboard_listview_background" >
        </ListView>
    </FrameLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Tutorials Completed:"
        android:textColor="@color/Navy" />

    <TextView
        android:id="@+id/tv_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="botha.zandre@gmail.com"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_profile_email"
        android:layout_below="@+id/tv_profile_email"
        android:text="User Name:"
        android:textColor="@color/Navy" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_profile_password"
        android:layout_below="@+id/et_profile_password"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_profile_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="English" />

        <RadioButton
            android:id="@+id/rb_profile_isixhosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:text="isiXhosa" />
    </RadioGroup>

</RelativeLayout>