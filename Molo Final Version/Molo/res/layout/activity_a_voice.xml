<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iv_lesson"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/exercise_background"
    tools:context="com.example.molo.A_voice"
    tools:ignore="MergeRootFrame" >

    <Chronometer
        android:id="@+id/cm_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Chronometer" />

    <RatingBar
        android:id="@+id/rb_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:isIndicator="true"
        android:numStars="3"
        android:rating="3" />

    <ProgressBar
        android:id="@+id/pb_voice"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_voice_top"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tv_voice_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rb_voice"
        android:layout_marginTop="181dp"
        android:text="TextView"
        android:textColor="@color/Red"
        android:textSize="40sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_below="@+id/rb_voice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" >

        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/voice_media_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_toRightOf="@+id/cm_voice"
        android:background="@drawable/media_buttons"
        android:src="@drawable/play"
        android:text="Button" />

    <ImageButton
        android:id="@+id/voice_media_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/voice_media_play"
        android:layout_marginRight="24dp"
        android:background="@drawable/rec_button"
        android:src="@drawable/record"
        android:text="Button" />

</RelativeLayout>